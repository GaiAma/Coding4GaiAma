{
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": ["node_modules", "test/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "outDir": ".",
    "target": "es2017",
    "declaration": true,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]  
  }
}