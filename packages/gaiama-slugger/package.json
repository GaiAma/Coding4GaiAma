{
  "name": "@gaiama/slugger",
  "version": "0.1.0",
  "description": "Opinionated slugger - handles duplicates & pre-configures @sindresorhus/slugify",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "CanRau <cansrau@gmail.com> (https://www.canrau.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/GaiAma/Coding4GaiAma.git",
    "directory": "packages/gaiama-slugger"
  },
  "homepage": "https://github.com/GaiAma/Coding4GaiAma/tree/master/packages/gaiama-slugger/README.md",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "yarn build --watch",
    "prepublish": "yarn build && yarn test",
    "test": "nyc ava --verbose",
    "test:watch": "ava --verbose --watch",
    "coverage": "nyc report --reporter=text-lcov"
  },
  "dependencies": {
    "@sindresorhus/slugify": "0.10.0"
  },
  "devDependencies": {
    "@types/node": "13.5.0",
    "ava": "3.1.0",
    "nyc": "15.0.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "keywords": [
    "slug",
    "slugify",
    "slug",
    "url",
    "url-safe",
    "urlify",
    "pretty-url"
  ],
  "files": [
    "lib"
  ]
}
